#!/bin/bash

aws configure set sso_start_url "https://d-9967682f1a.awsapps.com/start/#"
aws configure set sso_region "eu-central-1"
aws configure set sso_account_id "628924145931"
aws configure set sso_role_name "michalskiba-dev-frontend-deploy"
aws configure set output json
aws sso login

if [ ! -d "venv" ]; then
    echo "Creating virtual environment..."
    python3 -m venv venv
fi
source venv/bin/activate
pip3 install -r deploy.requirements.txt

cd modules/frontend/
AWS_PROFILE=michalskiba-dev-frontend-deploy-628924145931 python3 bin/deploy.py
