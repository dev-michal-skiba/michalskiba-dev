#!/bin/sh
RED='\033[0;31m'
GREEN='\033[0;32m'
NOCOLOR='\033[0m'

if ! isort --check-only ./
then
  echo "${RED}Isort check failed${NOCOLOR}"
  exit 1
fi
echo "${GREEN}Isort check succeeded${NOCOLOR}"
echo

if ! black --check ./
then
  echo "${RED}Black check failed${NOCOLOR}"
  exit 1
fi
echo "${GREEN}Black check succeeded${NOCOLOR}"
echo

if ! ruff check ./
then
  echo "${RED}Ruff check failed${NOCOLOR}"
  exit 1
fi
echo "${GREEN}Ruff check succeeded${NOCOLOR}"
echo

if ! mypy ./
then
  echo "${RED}Mypy check failed${NOCOLOR}"
  exit 1
fi
echo "${GREEN}Mypy check succeeded${NOCOLOR}"
echo

echo
echo "${GREEN}== Lint checks passed ==${NOCOLOR}"
